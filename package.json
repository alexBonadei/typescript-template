{
  "name": "mia_template_service_name_placeholder",
  "version": "0.1.0",
  "description": "%CUSTOM_PLUGIN_SERVICE_DESCRIPTION%",
  "main": "index.js",
  "scripts": {
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint . --ignore-path=.gitignore --ext=ts",
    "build": "rm -rf dist && tsc --project build.tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "dev": "env $(cat default.env | xargs) ts-node index.ts",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "coverage": "jest --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "prepare": "husky || true",
    "commit": "git add --all && cz",
    "update-docker-version": "sed -i.bck \"s|version=\\\"[0-9]*\\.[0-9]*\\.[0-9]*.*\\\"|version=\\\"${npm_package_version}\\\"|\" Dockerfile",
    "update-changelog": "node .scripts/update-changelog.js ${npm_package_version}",
    "version": "npm run update-changelog && npm run update-docker-version && rm -fr Dockerfile.bck && git add CHANGELOG.md Dockerfile"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.17.1",
    "archiver": "^7.0.1",
    "axios": "1.8.2",
    "exceljs": "^4.4.0",
    "fast-xml-parser": "^4.5.1",
    "fastify": "^5.2.0",
    "form-data": "^4.0.1",
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "mia-hot-start": "^1.0.1",
    "pino": "^9.6.0",
    "prom-client": "^15.1.3",
    "twig": "^1.17.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@fastify/type-provider-json-schema-to-ts": "^4.0.0",
    "@mia-platform/eslint-config-mia": "^3.0.0",
    "@types/archiver": "^6.0.3",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.11",
    "@types/jest-when": "^3.5.5",
    "@types/lodash": "^4.17.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.10.6",
    "@types/twig": "^1.12.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "fastify-metrics": "^10.6.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-when": "^3.7.0",
    "mongodb": "^6.8.0",
    "nock": "^13.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
